{
  "name": "maps-app-javascript",
  "version": "1.0.0",
  "description": "",
  "watch": {
    "build:dev": "./src/**",
    "copy": "./public/**",
    "copy:js": "./src/**/*.js",
    "css": "./src/app/styles/**",
    "test": "./src/**",
    "images": "./public/assets/icons/*"
  },
  "scripts": {
    "build:clean": "del build",
    "build:dev": "tsc -w",
    "build:prod": "npm run build:clean && npm run build:copy && npm run build:copy:js && npm run build:css && npm run build:tsc && npm run build:minify",
    "build:copy": "cpx './public/**' ./build",
    "build:copy:js": "cpx './src/**/*.js' ./build",
    "build:css": "postcss -e production src/app/styles/main.css -o build/app/styles/main.css --no-map",
    "build:minify": "uglifyjs ./build/app/main.js -c -m -o ./build/app/main.js",
    "build:tsc": "tsc -p configs/build.tsconfig.json",
    "copy": "cpx './public/**' ./dist -w",
    "copy:js": "cpx './src/**/*.js' ./dist -w",
    "coverage:start": "intern run -w --config ./dist/tests/intern-local.js reporters=Pretty reporters=node_modules/remap-istanbul/lib/intern-reporters/JsonCoverage && npm run coverage:after",
    "coverage:after": "npm run coverage:html && npm run coverage:remap && del coverage-final.json && npm run coverage:text && npm run coverage:clean",
    "coverage:clean": "del coverage-mapped.json",
    "coverage:html": "node_modules/.bin/remap-istanbul -i coverage-final.json -t html -o html-report",
    "coverage:remap": "node_modules/.bin/remap-istanbul -i coverage-final.json -o coverage-mapped.json",
    "coverage:text": "istanbul report text",
    "css": "postcss src/app/styles/main.css -o dist/app/styles/main.css -w",
    "images": "imagemin public/assets/icons/* --out-dir=dist/assets/icons",
    "prettify": "prettier 'src/**/*.{ts,tsx}' --write && tslint 'src/**/*.{ts,tsx}' --fix",
    "precommit": "lint-staged",
    "start": "tsc && npm run watch",
    "test": "intern serve --config ./dist/tests/intern-local.js",
    "test:coverage": "npm run coverage:start",
    "watch": "npm-watch",
    "webpack": "webpack --config webpack.build.config.js --env.NODE_ENV=local --env.production --progress",
    "serve": "webpack-dev-server --hot"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  },
  "keywords": [
    "esri",
    "arcgis",
    "typescript"
  ],
  "author": "Rene Rubalcava <rrubalcava@odoe.net",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/arcgis-js-api": "^4.4.0",
    "@types/chai": "~4.0.0",
    "@types/glob": "~5.0.0",
    "@types/grunt": "~0.4.0",
    "@types/node": "^8.0.1",
    "@types/sinon": "^2.3.1",
    "@types/webpack": "^3.0.10",
    "chai": "^4.0.2",
    "child-process-promise": "^2.2.1",
    "chromedriver": "^2.32.3",
    "clean-css-cli": "^4.1.5",
    "commander": "^2.9.0",
    "copy-webpack-plugin": "^4.0.1",
    "cpx": "^1.5.0",
    "css-loader": "^0.28.7",
    "css-mqpacker": "^6.0.1",
    "cssnano": "^4.0.0-rc.1",
    "del-cli": "^1.0.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "husky": "^0.13.4",
    "imagemin-cli": "^3.0.0",
    "intern": "~3.4.6",
    "intern-cli": "^0.1.2",
    "lint-staged": "^4.0.0",
    "npm-watch": "^0.1.8",
    "postcss-cli": "^4.1.0",
    "postcss-cssnext": "^2.11.0",
    "postcss-import": "^10.0.0",
    "postcss-loader": "^2.0.6",
    "prettier": "^1.4.4",
    "remap-istanbul": "^0.9.5",
    "sinon": "^2.0.0",
    "ts-loader": "^2.3.7",
    "tslint": "^5.4.3",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.5.2",
    "uglify-js": "^3.0.27",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.8.2"
  },
  "dependencies": {
    "awesome-typescript-loader": "^3.2.3",
    "material-components-web": "^0.21.1",
    "postcss-load-config": "^1.2.0",
    "postcss-nesting": "^4.0.1",
    "testdouble": "^3.1.1",
    "tslint-config-prettier": "^1.1.0"
  },
  "esri": {
    "type": "esrijs"
  }
}
