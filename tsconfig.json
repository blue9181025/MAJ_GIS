{
  "compilerOptions": {
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "module": "amd",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "tsx",
    "lib": ["dom", "es2015.promise", "es5", "es6"],
    "target": "es5",
    "moduleResolution": "node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "declaration": false,
    "noLib": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true
  },
  "typeRoots": [
    "./node_modules/@types",
    "./node_modules/intern/types"
  ],
  "types": [
    "arcgis-js-api",
    "chai",
    "intern"
  ],
  "include": [
    "./src/app/**/*",
    "./tests/**/*"
  ],
  "exclude": [
    "./node_modules"
  ],
  "files": [
    "typings/extensions.d.ts"
  ]
}
