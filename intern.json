{
  "loader": {
    "script": "dojo2",
    "options": {
      "paths": {
        "@material/drawer/index": "node_modules/@material/drawer/dist/mdc.drawer"
      },
      "packages": [
        { "name": "dist", "location": "~tmp" },
        {
          "name": "dojo",
          "location": "https://js.arcgis.com/4.5/dojo"
        },
        {
          "name": "dijit",
          "location": "https://js.arcgis.com/4.5/dijit"
        },
        {
          "name": "dojox",
          "location": "https://js.arcgis.com/4.5/dojox"
        },
        {
          "name": "dgrid",
          "location": "https://js.arcgis.com/4.5/dgrid"
        },
        {
          "name": "dstore",
          "location": "https://js.arcgis.com/4.5/dstore"
        },
        {
          "name": "moment",
          "location": "https://js.arcgis.com/4.5/moment"
        },
        {
          "name": "esri",
          "location": "https://js.arcgis.com/4.5/esri"
        },
        {
          "name": "chai",
          "location": "node_modules/chai",
          "main": "chai"
        },
        {
          "name": "sinon",
          "location": "node_modules/sinon/pkg",
          "main": "sinon"
        },
        {
          "name": "testdouble",
          "location": "node_modules/testdouble/dist",
          "main": "testdouble"
        },
        {
          "name": "@material",
          "location": "node_modules/@material"
        }
      ]
    }
  },
  "environments": [
    {
      "browserName": "chrome",
      //"chromeOptions": { "args": [ "headless", "disable-gpu" ] },
      "fixSessionCapabilities": false
    }
  ],
  "browser": {
    "suites": "~tmp/tests/unit/all.js"
  },
  "coverage": [
    "~tmp/app/**/*.js",
    "!~tmp/app/main.*",
    "!node_modules/"
  ],
  "maxConcurrency": 2
}